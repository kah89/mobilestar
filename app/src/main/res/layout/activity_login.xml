<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#ffc266">

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/txtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignLeft="@id/txtUsuario"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtUsuario"
        android:layout_alignBaseline="@id/txtUsuario"
        android:layout_alignParentRight="true"
        android:layout_marginRight="33dp"
        android:ems="11"
        />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtSenha"
        android:layout_alignBaseline="@id/txtSenha"
        android:layout_alignParentRight="true"
        android:layout_marginRight="33dp"
        android:ems="11"
        />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edtUsuario"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="61dp"
        android:layout_marginBottom="167dp"
        android:text="Entrar"
        android:background="#ec3030"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnEntrar"
        android:layout_alignRight="@id/btnEntrar"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="182dp"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="123dp"
        android:layout_height="122dp"
        android:layout_alignBottom="@+id/txtLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="-58dp"
        app:srcCompat="@mipmap/ic_logostar" />


</RelativeLayout>